<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom|right"
                android:background="@android:color/darker_gray"
                android:id="@+id/textViewInput" android:layout_weight="0.5"
                android:textColor="@android:color/background_light" android:textSize="36sp" android:text="0"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="top|right"
                android:background="@android:color/darker_gray"
                android:id="@+id/textViewOutput" android:layout_weight="0.5"
                android:textColor="@android:color/background_light" android:textSize="36sp"/>
    </LinearLayout>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0.5">

        <TableRow
                android:layout_width="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content">
            <Button
                    android:text="AC"
                    android:onClick="btnOnResetClick"
                    android:layout_span="3"
                    android:layout_margin="2dp"

                    android:id="@+id/buttonAC" android:background="?attr/colorButtonNormal"/>
            <Button
                    android:text="/"
                    android:onClick="btnOnOppClick"
                    android:layout_margin="2dp"

                    android:id="@+id/buttonSlash" android:background="#FF9800"/>

        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginBottom="2dp">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button7"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button8"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button9"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnOnOppClick"
                    android:layout_margin="2dp"

                    android:id="@+id/buttonAsterick" android:background="#FF9800"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_marginBottom="2dp"
                  android:layout_margin="2dp"

                  android:layout_height="match_parent">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button4"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button5"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"

                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:id="@+id/button6"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"

                    android:onClick="btnOnOppClick"
                    android:id="@+id/buttonMinus" android:background="#FF9800"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_marginBottom="2dp"
                  android:layout_height="match_parent">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button1"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button2"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorButtonNormal"
                    android:onClick="btnOnClick"
                    android:layout_margin="2dp"

                    android:id="@+id/button3"/>
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="btnOnOppClick"
                    android:layout_margin="2dp"

                    android:id="@+id/buttonPlus" android:background="#FF9800"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_marginBottom="2dp"
                  android:layout_height="match_parent">
            <Button
                    android:text="0"
                    android:layout_span="2"
                    android:layout_margin="2dp"
                    android:onClick="btnOnClick"
                    android:background="?attr/colorButtonNormal"
                    android:id="@+id/button0"/>
            <Button
                    android:text="."
                    android:background="?attr/colorButtonNormal"
                    android:layout_margin="2dp"
                    android:onClick="btnOnClick"
                    android:id="@+id/buttonDot"/>
            <Button
                    android:text="="
                    android:onClick="btnOnEqualsClick"
                    android:layout_margin="2dp"

                    android:id="@+id/buttonEquals" android:background="#FF9800"/>
        </TableRow>
    </TableLayout>

</LinearLayout>